{
  "name": "plugin-cool",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/plugin-cool/src",
  "projectType": "library",
  "tags": ["scope:plugin"],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/plugin-cool",
        "main": "packages/plugin-cool/src/index.ts",
        "tsConfig": "packages/plugin-cool/tsconfig.lib.json",
        "assets": [
          {
            "glob": "packages/plugin-cool/src/*.md",
            "input": "packages/plugin-cool/src",
            "output": "/"
          }
        ],
        "format": ["esm"]
      }
    },
    "code-pushup": {
      "command": "npx @code-pushup/cli collect --config ./packages/plugin-cool/code-pushup.config.ts --onlyPlugins=plugin-cool"
    },
    "unit-test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "./packages/plugin-cool/vite.config.ts"
      }
    },
    "integration-test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "./packages/plugin-cool/vite.config.integration.ts"
      }
    }
  }
}
