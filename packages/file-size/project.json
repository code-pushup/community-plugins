{
  "name": "file-size",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/file-size/src",
  "projectType": "library",
  "tags": ["scope:plugin"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/file-size",
        "main": "packages/file-size/src/index.ts",
        "tsConfig": "packages/file-size/tsconfig.lib.json",
        "assets": ["packages/file-size/*.md"],
        "generatePackageJson": true,
        "format": ["esm"]
      }
    },
    "code-pushup": {
      "command": "npx @code-pushup/cli collect --config ./packages/file-size/code-pushup.config.ts --onlyPlugins=file-size"
    },
    "unit-test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "./packages/file-size/vite.config.unit.ts"
      }
    },
    "integration-test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "./packages/file-size/vite.config.integration.ts"
      }
    }
  }
}
